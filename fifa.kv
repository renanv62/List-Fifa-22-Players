<ContentNavigationDrawer>:
    ScrollView:
        MDList:
            OneLineListItem:
                text: "Tela Principal"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "main_screen_activity"
            OneLineListItem:
                text: "Info"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "info_screen_activity"
Screen:
    MDTopAppBar:
        id: toolbar
        pos_hint: {"top": 1}
        title: "Search Fifa Players"
        #specific_text_color: "yellow"
        md_bg_color: .29, .255, .201, 1.0
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        left_action_color: 1,1,1,1

    MDNavigationLayout:
        x: toolbar.height
        size_hint_y: 1.0 - toolbar.height/root.height
        ScreenManager:
            id: screen_manager
            Screen:
                id: MainScreen
                name: "main_screen_activity"
                MDBoxLayout:#my box layout
                    orientation: 'horizontal'
                    size_hint_x: 1
                    canvas.before:
                        Color:
                            rgba: 0.10980392156862745, 0.12156862745098039, 0.14901960784313725, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    #LAYOUT LEFT SEARCH PLAYER (initial idea was to put the player profile pic)
                    MDBoxLayout:#my box layout
                        orientation: "vertical"
                        size_hint: (0.9,1)
                        #LAYOUT LEFT UP (INPUT TO TYPE THE PLAYER NAME)
                        MDBoxLayout:
                            orientation:'horizontal'
                            size_hint_y: .1
                            MDBoxLayout:
                                orientation:'vertical'
                                AnchorLayout:
                                    anchor_x: 'center'
                                    MDTextField:
                                        id: id_search_field_player
                                        text: 'Pesquisar'
                                        size_hint: None, None
                                        width: 300
                                        multiline: False
                                        text_color_normal: "white"
                                        #text_color_focus: "white"
                                        line_color_normal: 1,1,1,1
                                        #line_color_focus: 1, 1, 1, 1
                                        on_text_validate: app.search_player()
                        #LAYOUT LEFT DOWN (LIST PLAYERS)
                        MDBoxLayout:
                            orientation:'horizontal'
                            size_hint_y: .9
                            ScrollView:
                                id: scroll_view
                                do_scroll_x: False
                                BoxLayout:
                                    id: scroll_layout
                                    orientation:'vertical'
                                    spacing: '30'
                                    size_hint_y: None
                                    height: self.minimum_height
                    #LAYOUT RIGHT (PLAYER INFO)
                    MDBoxLayout:#my box layout
                        orientation: "vertical"
                        size_hint: (1.1,1)
                        # LAYOUT RIGHT (UP)
                        MDBoxLayout:#my box layout
                            orientation: 'horizontal'
                            size_hint_y: .3
                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint_x: 0.7
                                MDBoxLayout:
                                    orientation: 'vertical'
                                    MDLabel:
                                        id: player_name_label_id
                                        text: app.init_default_player_name
                                        halign:'center'
                                        font_size: '30px'
                                        font_name: 'Roboto'
                                        bold: True
                                        color: (1, 1, 1, 1)
                                MDBoxLayout:
                                    orientation: 'horizontal'
                                    MDLabel:
                                        id: player_pos_label_id
                                        text:'Pos: '+app.init_default_player_position
                                        halign:'center'
                                        font_name: 'Roboto'
                                        color: (1, 1, 1, 1)
                                    MDLabel:
                                        id: player_age_label_id
                                        text: 'Idade: '+app.init_default_player_age
                                        halign:'center'
                                        font_name: 'Roboto'
                                        color: (1, 1, 1, 1)
                                    Image:
                                        id: player_flag_image_id
                                        source: app.init_flag_url+".png"
                                        size_hint: None,None
                                        size: "20dp", "20dp"
                                        pos_hint: {"center_x": .5, "center_y": .5}
                                    MDLabel:
                                        id: player_nationalityName_label_id
                                        text:app.init_default_player_nationality_name
                                        halign: 'center'
                                        font_name: 'Roboto'
                                        color: (1, 1, 1, 1)
