                                orientation: 'vertical'
                                size_hint_x: 0.3
                                MDGridLayout:
                                    rows:2
                                    cols:1
                                    MDLabel:
                                        id: player_overall_label_id
                                        text:app.init_default_player_overall
                                        halign: 'center'
                                        bold: True
                                        font_size: '30px'
                                        font_name: 'Roboto'
                                        color: (1, 1, 1, 1)
