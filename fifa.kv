                                    name: 'botao_atr'
                                    text: 'Atributos'
                                    bold: True
                                    theme_text_color:"Custom"
                                    text_color: (1, 1, 1, 1)
                                    font_style: 'Button'
                                    on_release:
                                        root.ids.box_layout.opacity = 1
                                        root.ids.box_layout_2.opacity = 0
